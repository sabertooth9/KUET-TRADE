<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SlateGray"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".store_and_user_nav_settings"
    tools:showIn="@layout/app_bar_store_and_user_nav_settings">

    <include
        layout="@layout/weather_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.card.MaterialCardView
            android:id="@+id/tv_tsh"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:padding="30dp"
                android:fontFamily="@font/google_sans_bold"
                android:background="@color/indigodye"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="T Shirt Half Sleeve" />

        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:id="@+id/tv_tsf"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:padding="30dp"
                android:background="@color/indigodye"
                android:textColor="@color/white"
                android:fontFamily="@font/google_sans_bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="T Shirt Full Sleeve" />

        </android.support.design.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.card.MaterialCardView
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_psh"
            android:layout_weight="1">

            <TextView
                android:padding="30dp"
                android:fontFamily="@font/google_sans_bold"
                android:background="@color/indigodye"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Polo Shirt Half Sleeve" />

        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:id="@+id/tv_psf"
            android:layout_weight="1">
            <TextView
                android:padding="30dp"
                android:background="@color/indigodye"
                android:textColor="@color/white"
                android:fontFamily="@font/google_sans_bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Polo Shirt Full Sleeve" />

        </android.support.design.card.MaterialCardView>
    </LinearLayout>

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:id="@+id/tv_hoodie"
        android:layout_height="wrap_content">
        <TextView
            android:padding="30dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@color/indigodye"
            android:textColor="@color/white"
            android:fontFamily="@font/google_sans_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoodie" />

    </android.support.design.card.MaterialCardView>
</LinearLayout>