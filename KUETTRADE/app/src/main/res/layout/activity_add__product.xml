<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/MediumSeaGreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ADD_PRODUCT">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:layout_weight="1"
                android:id="@+id/image_view_product_pic_f"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/todo"
                app:srcCompat="@color/Azure"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/image_view_product_pic_b"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/todo"
                app:srcCompat="@color/Azure"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>

        <LinearLayout
            android:background="@color/Gold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <CheckBox
                android:id="@+id/checkbox_t_shirt_half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/t_shirt_half_sleeve" />

            <CheckBox
                android:id="@+id/checkbox_t_shirt_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/t_shirt_full_sleeve" />
        </LinearLayout>

        <LinearLayout
            android:background="@color/BurlyWood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <CheckBox
                android:id="@+id/checkbox_polo_half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/polo_shirt_half_sleeve" />

            <CheckBox
                android:id="@+id/checkbox_polo_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/polo_shirt_full_sleeve" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/LightGoldenrodYellow">
            <CheckBox
                android:id="@+id/checkbox_hoodie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hoodie" />
        </LinearLayout>

        <EditText
            android:id="@+id/edit_text_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="@string/your_product_name"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:padding="5dp"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/edit_text_product_descriptio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="@string/description"
            android:importantForAutofill="no"
            android:inputType="text"
            android:padding="5dp"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/edit_text_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="@string/price"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:padding="5dp"
            tools:targetApi="o" />

        <include
            layout="@layout/product_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_text_product_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="@string/how_many_you_want_to_sell"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:padding="5dp"
            tools:targetApi="o" />

        <Button
            android:textColor="@color/Wheat"
            android:background="@color/Black"
            android:id="@+id/button_add_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="@string/add_this_product" />
    </LinearLayout>
</ScrollView>